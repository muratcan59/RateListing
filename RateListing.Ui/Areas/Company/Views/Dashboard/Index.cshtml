@model RateListing.Model.User

@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Areas/Company/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Anasayfa</a>
        </li>
        @*<li class="breadcrumb-item active">My Dashboard</li>*@
    </ol>
    <!-- Icon Cards-->
    <div class="row">
        <div class="col-md-3">
            <div class="card dashboard text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div><h5>@ViewBag.TeklifCount Teklif</h5></div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="/Company/Dashboard/RequestList">
                    <span class="float-left">Listeye Git</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card dashboard text-white bg-success o-hidden h-100">
                <div class="card-body">
                    <div><h5>@ViewBag.TeklifCount Referans</h5></div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="/Company/Dashboard/ReferenceList">
                    <span class="float-left">Listeye Git</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card dashboard text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div><h5>@ViewBag.SikayetCount Şikayet</h5></div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="/Company/Dashboard/ComplaintList">
                    <span class="float-left">Listeye Git</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        @if (!Model.isInformationConfirmed)
        {
            <div class="col-md-3">
                <div class="card dashboard text-white bg-danger o-hidden h-100">
                    <div class="card-body">
                        <div><h5>Onay Bekliyor</h5></div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="/Company/Dashboard/ProcessTracking">
                        <span class="float-left">Süreç Takibi</span>
                        <span class="float-right">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
        }
        else if (!Model.isPaymentConfirmed)
        {
            <div class="col-md-3">
                <div class="card dashboard text-white bg-warning o-hidden h-100">
                    <div class="card-body">
                        <div><h5>Ödeme Bekliyor</h5></div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="/Company/Dashboard/ProcessTracking">
                        <span class="float-left">Süreç Takibi</span>
                        <span class="float-right">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-3">
                <div class="card dashboard text-white bg-success o-hidden h-100">
                    <div class="card-body">
                        <div><h5>Yayında</h5></div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="/Company/Dashboard/ProcessTracking">
                        <span class="float-left">Süreç Takibi</span>
                        <span class="float-right">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
        }
    </div>
    <!-- /cards -->
    @*<h2></h2>
    <div class="box_general padding_bottom">
        <div class="header_box version_2">
            <h2><i class="fa fa-bar-chart"></i>Görüntüleme Geçmişi</h2>
        </div>
        <canvas id="myAreaChart" width="100%" height="30" style="margin:45px 0 15px 0;"></canvas>
    </div>*@
</div>
<!-- /.container-fluid-->
