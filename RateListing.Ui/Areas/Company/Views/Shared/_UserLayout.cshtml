    <script>
        $(".CityId").change(function () {
            setCountries();
        });

        function setCountries() {
            var cityId = $("#CityNum").val();
            $(".DistrictId").html("");
            $.get("/Company/Dashboard/Districts?cityNum=" + cityId, function (result) {
                $.each(result, function (key, value) {
                    $(".DistrictId").append(new Option(value.Name, value.DistrictNum));
                });
            });
