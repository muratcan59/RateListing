@model IEnumerable<RateListing.Model.Blog>
@{
    ViewBag.Title = "404";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="header_in is_sticky menu_fixed">@Html.Partial("Menu/Other")</header>

<main>
    <div id="error_page">
        <div class="wrapper">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-xl-7 col-lg-9">
                        <h2>404 <i class="icon_error-triangle_alt"></i></h2>
                        <p>Üzgünüz, aradığınız sayfa mevcut değil.</p>
                        <form method="get" action="/firmalar">
                            <div class="search_bar_error">
                                <input type="text" name="name" class="form-control" placeholder="Firma veya Sektör Arayın." required>
                                <input type="submit" value="Ara">
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /wrapper -->
    </div>
    <!-- /error_page -->
</main>